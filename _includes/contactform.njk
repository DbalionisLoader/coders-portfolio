<div class="offcanvas offcanvas-end" data-bs-theme="dark" tabindex="-1" id="offcanvasExample" aria-labelledby="Contact the developer form">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="notitle"></h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div>
      <h1>Send Me a Message</h1>
    </div>
    <div class="form-wrapper">
      <form name="contact-form-offcanvas" method="POST" data-netlify="true">
        <div class="mb-3">
          <label for="firstnamefield" class="form-label">First name*</label>
            <input type="text" class="form-control" id="firstNameInput1" placeholder="John">
        </div>
         <div class="mb-3">
          <label for="surnamenamefield" class="form-label">Last name*</label>
            <input type="text" class="form-control " id="firstNameInput1" placeholder="Smith">
        </div>
        <div class="mb-3">
          <label for="emailaddressfield" class="form-label">Email address*</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        
        
        <div class="mb-3">
           <label for="messagefield" class="form-label">How can I help you?</label>
            <textarea class="form-control" placeholder="Your message (optional)" id="messagefieldTextarea1" rows="3">
            </textarea>
        </div>
        <div class="button-wrap">
            <button type="submit">Send</button>
        </div>
      </form>
    </div>
  </div>
</div>